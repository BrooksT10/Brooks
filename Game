<h2>Countries</h2>
<select id="countries">
    <option value="USA">USA</option>
    <option value="China">China</option>
    <option value="Russia">Russia</option>
    <option value="India">India</option>
    <option value="Brazil">Brazil</option>
    <!-- Add more countries as needed -->
</select>
<button onclick="conquerCountry()">Conquer</button>
<div id="message"></div>

<script>
    function conquerCountry() {
        const country = document.getElementById("countries").value;
        const success = Math.random() < 0.5; // 50% chance of success

        if (success) {
            document.getElementById("message").innerText = `Congratulations! You have successfully conquered ${country}.`;
        } else {
            document.getElementById("message").innerText = `Oops! Your attempt to conquer ${country} failed. Try again!`;
        }
    }
</script>
